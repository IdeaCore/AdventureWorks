@model AdventureWorksWebAPI.Models.ProductsVM

@{
    ViewBag.Title = @Model.Category;
}

<h2>@Model.Category</h2>

<table class="table">
    <tr>
        <th>
            &nbsp;
        </th>
        <th>
            @Html.DisplayNameFor(model => Model.Products.FirstOrDefault().ProductNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => Model.Products.FirstOrDefault().Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => Model.Products.FirstOrDefault().Color)
        </th>
        <th>
            @Html.DisplayNameFor(model => Model.Products.FirstOrDefault().ListPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => Model.Products.FirstOrDefault().Size)
        </th>
        <th>
            @Html.DisplayNameFor(model => Model.Products.FirstOrDefault().Weight)
        </th>
        <th>
            @Html.DisplayNameFor(model => Model.Products.FirstOrDefault().ProductLine)
        </th>
        <th>
            @Html.DisplayNameFor(model => Model.Products.FirstOrDefault().Class)
        </th>
        <th>
            @Html.DisplayNameFor(model => Model.Products.FirstOrDefault().Style)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Products) {
    <tr>
        <td>
            <a href="@Url.Action("Details", new { id = item.ProductID })"><img src='@Url.Action( "Thumbnail", "Images", new { id = item.ProductProductPhotoes.First().ProductPhotoID } )' />
</a></td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Color)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ListPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Size)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Weight)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductLine)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Class)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Style)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ProductID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ProductID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ProductID })
        </td>
    </tr>
}

</table>
